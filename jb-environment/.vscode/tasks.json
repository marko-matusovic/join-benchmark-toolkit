{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "docker-build",
			"label": "docker-build",
			"platform": "python",
			"dockerBuild": {
				"tag": "python:latest",
				"dockerfile": "${workspaceFolder}/Dockerfile",
				"context": "${workspaceFolder}",
				"pull": true
			}
		},
		{
			"type": "docker-run",
			"label": "docker-run: debug",
			"dependsOn": [
				"docker-build"
			],
			"python": {
				"file": "join-benchmark/main.py"
			},
			"dockerRun": {
				"volumes": [
				  {
					"containerPath": "/app/join-benchmark", "localPath": "${workspaceFolder}/join-benchmark"
				  }
				]
			  },
		}
	]
}