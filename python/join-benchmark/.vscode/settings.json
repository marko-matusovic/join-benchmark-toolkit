{
    "python.analysis.typeCheckingMode": "basic",
    "python.analysis.inlayHints.variableTypes": false,
    "python.analysis.inlayHints.functionReturnTypes": false,
    "files.exclude": {
        "**/.git": false,
        "**/.svn": false,
        "**/.hg": false,
        "**/CVS": false,
        "**/__pycache__": false,
        "**/__init__.py": false
    },
    "cSpell.words": [
        "ndarray"
    ],
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter"
    }
}