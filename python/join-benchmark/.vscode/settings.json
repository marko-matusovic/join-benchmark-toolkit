{
    "python.analysis.typeCheckingMode": "basic",
    "python.analysis.inlayHints.variableTypes": false,
    "python.analysis.inlayHints.functionReturnTypes": false,
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/__pycache__": true,
        "**/__init__.py": true,
    },
    "cSpell.words": [
        "ndarray"
    ],
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter"
    }
}